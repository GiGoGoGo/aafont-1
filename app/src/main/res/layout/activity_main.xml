<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabLayout"/>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dip"-->
    <!--android:background="#ffd4dce1" />-->

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:background="#ff76a5c5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_home"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="center"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/image_find"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="center"
            app:srcCompat="@drawable/find" />

        <ImageView
            android:id="@+id/image_create"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="center"
            app:srcCompat="@drawable/create" />

        <ImageView
            android:id="@+id/image_notice"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="center"
            app:srcCompat="@drawable/notice" />

        <ImageView
            android:id="@+id/image_me"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="center"
            app:srcCompat="@drawable/me" />

    </LinearLayout>

</RelativeLayout>
